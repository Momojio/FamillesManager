<Window x:Class="FamillesManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamillesManager.Models"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200"

        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">
    <!--Style="{StaticResource MaterialDesignWindow}"-->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="FamilyItemTemplate">
                <Border Margin="10" Width="150" Height="200" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" CornerRadius="4">
                    <StackPanel Orientation="Vertical">
                        <Image Width="100" Height="120" Source="{Binding IconPath}"/>
                        <TextBlock TextWrapping= "NoWrap" HorizontalAlignment="Center" Text="{Binding Name}" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" 
                                   FontSize="14" Margin="0,0,0,5" MaxWidth="130" TextTrimming="CharacterEllipsis">
                            <TextBlock.ToolTip>
                                <ToolTip Content="{Binding Name}"/>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Button x:Name="LoadButton" Tag="{Binding}"  HorizontalAlignment="Center" Content="Charger" Style="{DynamicResource MaterialDesignRaisedButton}" 
                                Margin="10,5,10,10" Cursor="Hand" MinWidth="80" Click="LoadButton_Click"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="52" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Mode="PrimaryMid" Padding="10" Height="48" VerticalAlignment="Center">
            <TextBlock Style="{DynamicResource MaterialDesignTitleLargeTextBlock}" 
                       FontSize="20"
                       Text="Bienvenue à FamillesManager"
                       HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Width="914" >
            <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                       FontSize="16"
                       Text="Path bibliothèque : "
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="LibraryPathTextBox"
                          Style="{DynamicResource MaterialDesignTextBox}" 
                          Width="300" 
                          Margin="10,0,0,0"
                          VerticalAlignment="Center" KeyDown="LibraryPathTextBox_KeyDown"/>
            <Button x:Name="BrowseButton"
                    Style="{DynamicResource MaterialDesignRaisedButton}" 
                    Content="Parcourir" 
                    Margin="10,10,10,10"
                    VerticalAlignment="Center"
                    Click="BrowseButton_Click"/>
            <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                       FontSize="16"
                       Text="Key words : "
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="Rechercher"
                          Style="{DynamicResource MaterialDesignTextBox}" 
                          Width="100" 
                          Margin="10,0,0,0"
                          VerticalAlignment="Center" KeyDown="Rechercher_KeyDown" TextChanged="Rechercher_TextChanged"/>
            <Button x:Name="SearchButton"
                    Style="{DynamicResource MaterialDesignRaisedButton}" 
                    Content="Rechercher" 
                    Margin="10,10,10,10"
                    VerticalAlignment="Center"
                    Click="SearchButton_Click"/>
        </StackPanel>
        <ScrollViewer Grid.Row="2" Margin="10,10,10,10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
            <ItemsControl x:Name="ItemsList" 
                          ItemsSource="{Binding Families}"
                          ItemTemplate="{StaticResource FamilyItemTemplate}">
                <!--View tempo pour les familles-->
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type local:FamilyItem}">
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                        <local:FamilyItem Name="Famille Exemple" 
                                          IconPath="pack://application:,,,/FamillesManager;component/Assets/exemple_Junhui.png"/>
                    </x:Array>
                </d:ItemsControl.ItemsSource>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <Border Grid.Row="3" Background="{DynamicResource MaterialDesign}" 
                Margin="10" BorderThickness="0,1,0,0" Padding="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Firstpage"
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Content="Première" 
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        Click="Firstpage_Click"/>
                <Button x:Name="PreviousPage"
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Content="Préc." 
                        Margin="10,0,10,0"
                        VerticalAlignment="Center" Click="PreviousPage_Click"/>

                <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                       x:Name="PageInfoTextBlock"
                       FontSize="16"
                          Text="Page 1 sur 1"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
                <ComboBox x:Name="PageSelector"
                       Style="{DynamicResource MaterialDesignComboBox}" 
                       Width="100" 
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                      SelectedIndex="0" SelectionChanged="PageSelector_SelectionChanged"
                      />
                <!--IsEditable="True"-->
                <!--IsTextSearchEnabled="False"-->
                <!--Text="{Binding CurrentPage, Mode=TwoWay}"
                        ItemsSource="{Binding PageNumbers}"
                        SelectedItem="{Binding CurrentPage, Mode=TwoWay}"-->
                <Button x:Name="NextPage"
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Content="Suiv." 
                        Margin="10,0,10,0"
                        VerticalAlignment="Center" Click="NextPage_Click"/>

                <Button x:Name="LastPage"
                        Style="{DynamicResource MaterialDesignRaisedButton}" 
                        Content="Dernière" 
                        Margin="10,0,10,0"
                        VerticalAlignment="Center" Click="LastPage_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>



    </Grid>
</Window>
